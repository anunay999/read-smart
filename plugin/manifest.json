{
    "manifest_version": 3,
    "name": "Read Smart",
    "version": "1.0",
    "description": "Extracts main content from web pages like reader mode",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs",
      "storage"
    ],
    "host_permissions": [
      "<all_urls>",
      "https://generativelanguage.googleapis.com/*",
      "https://api.mem0.ai/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "lib/Readability.js", 
          "lib/marked.min.js", 
          "lib/memory-enhanced-reading.js", 
          "content.js"
        ],
        "css": [
          "lib/tailwind.min.css"
        ],
        "run_at": "document_end",
        "all_frames": false
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "lib/Readability.js",
          "lib/marked.min.js", 
          "lib/memory-enhanced-reading.js",
          "lib/tailwind.min.css",
          "reader-styles.css",
          "styles.css"

        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  